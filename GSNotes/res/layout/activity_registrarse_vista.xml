<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/Margen1"
        android:text="Nuevo Usuario"
        android:textSize="@dimen/Titulo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Titulo"
        android:layout_marginTop="@dimen/Titulo"
        android:text="Nombre:" />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Titulo"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Titulo"
        android:layout_marginTop="@dimen/Titulo"
        android:text="Email:" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Titulo"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Titulo"
        android:layout_marginTop="@dimen/Titulo"
        android:text="Password:" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Titulo"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Titulo"
        android:layout_marginTop="@dimen/Titulo"
        android:text="Confirme password:" />

    <EditText
        android:id="@+id/editTextPasswordConfirm"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Titulo"
        android:ems="10"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Titulo" >

        <Button
            android:id="@+id/buttonVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Titulo"
            android:layout_marginRight="@dimen/Margen1"
            android:layout_marginTop="@dimen/Margen1"
            android:layout_weight="1"
            android:onClick="volver"
            android:text="Volver" />

        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Margen1"
            android:layout_marginRight="@dimen/Titulo"
            android:layout_marginTop="@dimen/Margen1"
            android:layout_weight="1"
            android:onClick="registrarUsuario"
            android:text="Registrar" />

    </LinearLayout>

</LinearLayout>
